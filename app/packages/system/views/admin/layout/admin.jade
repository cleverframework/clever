doctype html
html
  head
    include ../components/head.jade
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") Clever CMS
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(href="/") Dashboard
            li
              a(href="/settings") Settings
            li
              a(href="/users") Users
            li
              a(href="/help") Help
          //
            form.navbar-form.navbar-right
              input.form-control(type="text", placeholder="Search...")

    .container-fluid
      .row
        .col-sm-3.col-md-2.sidebar
          h3 Modules
          ul.nav.nav-sidebar
            each pkg, index in packages
              if pkg.visible
                li
                  a(href="/#{pkg.name}") #{pkg.name}

        .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
          block content

    //- JS
    script(src="/public/system/vendor/jquery/dist/jquery.min.js")
    script(src="/public/system/vendor/bootstrap/dist/js/bootstrap.min.js")
              
    block appendjs
      script(src="/public/system/admin/index.js")
