doctype html
html
  head
    include ../components/head.jade
  body
    nav(class="navbar navbar-inverse navbar-fixed-top")
      div(class="container")
        div(class="navbar-header")
          button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
            span(class="sr-only") Toggle navigation
            span(class="icon-bar")
            span(class="icon-bar")
            span(class="icon-bar")
          a(class="navbar-brand" href="") Clever CMS
        div(id="navbar" class="collapse navbar-collapse")
          ul(class="nav navbar-nav")
            li(class="")
              a(href="") Home
          ul(class="nav navbar-nav navbar-right")
            if user
              li.dropdown
                a.dropdown-toggle(href="#", data-toggle="dropdown", role="button", aria-expanded="false")
                  | #{user.firstName} #{user.lastName} 
                  span.caret
                  |                 
                  ul.dropdown-menu(role="menu")
                    if user.isAdmin()
                      li(class="")
                        a(href="/admin") Administration
                    li
                      a(href="#") Profile
                    |                   
                    li
                      a(href="#") Account
                    |                                   
                    li.divider
                    li
                      a(href="/logout") Logout
            else    
              li(class="")
                a(href="/login") Login
              li(class="")
                a(href="/register") Signup
            

    div(class="container")
      block content

    //- JS
    script(src="/public/system/vendor/jquery/dist/jquery.min.js")
    script(src="/public/system/vendor/bootstrap/dist/js/bootstrap.min.js")
      
    block appendjs
      script(src="/public/system/site/index.js")
