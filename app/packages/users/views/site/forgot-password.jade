extends ../../../system/views/site/layout/site

block content
	.container
		form.form-signin(id="resetPassword", action="/forgot-password", method="POST", autocomplete="off")
			h2.form-signin-heading Forgot password
			label.sr-only(for="inputEmail") Email address
			input#inputEmail.form-control(type="email", name="email", placeholder="Email address", value="", required="")
			input(type="hidden", name="_csrf", value="#{csrfToken}")
			button.btn.btn-lg.btn-primary.btn-block(id="resetPasswordBtn", type="submit") Reset
			br
			div#resetPasswordError(class="alert alert-danger hidden", role="alert")
				b
					|	Ops! 
				span.message
					| No Errors
			p
				a(href="/forgot-password", class="") Forgot your password?
			p
				a(href="/login", class="") Login

block appendcss
	link(rel="stylesheet", href="/public/users/site/index.css")
		
block appendjs
	script(src="/public/users/site/index.js")
