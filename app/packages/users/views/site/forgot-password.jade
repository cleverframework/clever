extends ../../../system/views/site/layout/site

block content
  .container
    form.form-signin(id="sendResetPasswordEmail", action="/forgot-password", method="POST", autocomplete="off")
      h2.form-signin-heading Forgot password
      label.sr-only(for="inputEmail") Email address
      input#inputEmail.form-control(type="email", name="email", placeholder="Email address", value="", required="")
      input(type="hidden", name="_csrf", value="#{csrfToken}")
      button.btn.btn-lg.btn-primary.btn-block(id="sendResetPasswordEmailBtn", type="submit") Reset
      br
      div#sendResetPasswordEmailError(class="alert alert-danger hidden", role="alert")
        b
          |  Ops! 
        span.message
          | No Errors
      div#sendResetPasswordEmailSuccess(class="alert alert-success hidden", role="alert")
        b
          |  Amazing! 
        span.message
          | We sent an email with the instructions to reset your password.
      p
        a(href="/forgot-password", class="") Forgot your password?
      p
        a(href="/login", class="") Login

block appendcss
  link(rel="stylesheet", href="/public/users/site/index.css")
    
block appendjs
  script(src="/public/users/site/index.js")
