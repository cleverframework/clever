extends ../../../system/views/site/layout/site

block content
	.container
		form.form-signin(action='/login', method='POST')
			h2.form-signin-heading Please log in
			label.sr-only(for='inputEmail') Email address
			input#inputEmail.form-control(type='email', name='email', placeholder='Email address', required='', autofocus='')
			label.sr-only(for='inputPassword') Password
			input#inputPassword.form-control(type='password', name='password', placeholder='Password', required='')
			.checkbox
				label
					input(type='checkbox', value='remember-me')
					|	Remember me
			input(type="hidden", name="_csrf", value="#{csrfToken}")
			button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
			br
			if message != ''
				div(class="alert alert-danger", role="alert")
					b
						|	Ops!
					|  #{message}.
			p
				a(href='/users/forgot', class='') Forgot your password?
			p
				a(href='/register', class='') Create an account

block appendcss
	link(rel='stylesheet', href='/public/users/site/css/signin.css')
