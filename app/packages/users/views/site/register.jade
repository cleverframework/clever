extends ../../../system/views/site/layout/site

block content
	.container
		form.form-signin(id="createUser", action="/register", method="POST", autocomplete="off")
			h2.form-signin-heading Please sign up
			label.sr-only(for="inputFirstName") Firstname
			input#inputEmail.form-control(type="text", name="firstName", placeholder="Firstname", value="", required="", autofocus="")
			label.sr-only(for="inputLastName") Firstname
			input#inputEmail.form-control(type="text", name="lastName", placeholder="Lastname", value="", required="")
			label.sr-only(for="inputEmail") Email address
			input#inputEmail.form-control(type="email", name="email", placeholder="Email address", value="", required="")
			label.sr-only(for="inputPassword") Password
			input#inputPassword.form-control(type="password", name="password", placeholder="Password", value="", required="")
			.checkbox
				label
					input(type="checkbox", value="automatic-login", checked="checked")
					|	Automatic login
			input(type="hidden", name="_csrf", value="#{csrfToken}")
			button.btn.btn-lg.btn-primary.btn-block(id="createUserBtn", type="submit") Sign in
			br
			div#createUserError(class="alert alert-danger hidden", role="alert")
				b
					|	Ops! 
				span.message
					| No Errors
			p
				a(href="/users/forgot", class="") Forgot your password?
			p
				a(href="/users/login", class="") Login

block appendcss
	link(rel="stylesheet", href="/public/users/site/index.css")
		
block appendjs
	script(src="/public/users/site/index.js")
