extends ../../../system/views/site/layout/site

block content
	.container
		form.form-signin(action='/register', method='POST')
			h2.form-signin-heading Please sign up
			label.sr-only(for='inputFirstName') Firstname
			input#inputEmail.form-control(type='text', name='firstName', placeholder='Firstname', required='', autofocus='')
			label.sr-only(for='inputLastName') Firstname
			input#inputEmail.form-control(type='text', name='lastName', placeholder='Lastname', required='')
			label.sr-only(for='inputEmail') Email address
			input#inputEmail.form-control(type='email', name='email', placeholder='Email address', required='')
			label.sr-only(for='inputPassword') Password
			input#inputPassword.form-control(type='password', name='password', placeholder='Password', required='')
			.checkbox
				label
					input(type='checkbox', value='automatic-login', checked='checked')
					|	Automatic login
			input(type="hidden", name="_csrf", value="#{csrfToken}")
			button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
			br
			if message != ''
				div(class="alert alert-danger", role="alert")
					b
						|	Ops!
					|  #{message}.
			p
				a(href='/users/forgot', class='') Forgot your password?
			p
				a(href='/users/login', class='') Login

block appendcss
	link(rel='stylesheet', href='/public/users/site/index.css')
