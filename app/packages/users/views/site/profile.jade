extends ../../../system/views/site/layout/site

block vars
  - var bodyClass = 'profile'
  
block content
  div(class="profile-template")
    .container
      form#updateProfile.col-sm-8(method="PUT", action="/api/users/#{me._id}", autocomplete="off")
        .form-group
            label(for="inputFirstName") First Name
            |     
            input#inputFirstName.form-control(type="text", name="firstName", value="#{me.firstName}", placeholder="Firstname")
          |  
        .form-group
            label(for="inputLastname") Last Name
            |     
            input#inputLastname.form-control(type="text", name="lastName", value="#{me.lastName}", placeholder="Lastname")
          |  
        .form-group
            label(for="inputEmail") Email address
            |     
            input#inputEmail.form-control(type="email", name="email", value="#{me.email}", placeholder="Email address")
          |   
        input(type="hidden", name="_csrf", value="#{csrfToken}")
        |   
        button#updateProfileBtn.btn.btn-success(type="submit") Save
        br
        br
        div#updateProfileError(class="alert alert-danger hidden", role="alert")
          b
            |	Ops! 
          span.message
            | No Errors

block appendcss
  link(rel="stylesheet", href="/public/users/site/index.css")

block appendjs
