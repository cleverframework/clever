extends ../../../system/views/admin/layout/admin

block content
  h1.page-header
    | Users: 
    span(style="color: #666") Create
    div.row.placeholders
  form#createUser.col-sm-8(method="POST", action="/api/users", autocomplete="off")
    .form-group
        label(for="inputFirstName") First Name
        |     
        input#inputFirstName.form-control(type="text", name="firstName", value="", placeholder="Firstname")
      |  
    .form-group
        label(for="inputLastname") Last Name
        |     
        input#inputLastname.form-control(type="text", name="lastName", value="", placeholder="Lastname")
      |  
    .form-group
        label(for="inputEmail") Email address
        |     
        input#inputEmail.form-control(type="email", name="email", value="", placeholder="Email address")
      |   
    .form-group
      label(for="inputPassword") Password
      |     
      input#inputPassword.form-control(type="password", name="password", value="", placeholder="Password")
    |    
    .checkbox
      label
        input(type="checkbox", name="admin", value="1")
        |  Admin
    input(type="hidden", name="_csrf", value="#{csrfToken}")
    |   
    a.btn.btn-default(href="/admin/users", style="margin-right: 5px;") Cancel
    button#createUserBtn.btn.btn-success(type="submit") Create
    br
    div#createUserError(class="alert alert-danger hidden", role="alert")
      b
        |	Ops! 
      span.message
        | No Errors



block appendjs
  script(src="/public/users/admin/index.js")
